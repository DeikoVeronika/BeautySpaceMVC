@model BeautySpaceInfrastructure.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація";
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

}


<div class="content">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="userForm">
                <h2 class="text-center mt-3">Реєстрація</h2>

                <form method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="userFormContainer">
                        <div class="userFormInput">
                            <div>
                                <label asp-for="Email"></label><br />
                                <input asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="Password"></label><br />
                                <div style="position: relative;">
                                    <input type="password" id="password" asp-for="Password" />
                                    <i class="material-symbols-outlined passwordInput" onclick="showHidePassword()">visibility_off</i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="PasswordConfirm"></label><br />
                                <div style="position: relative;">
                                    <input type="password" id="passwordConfirm" asp-for="PasswordConfirm" />
                                    <i class="material-symbols-outlined passwordInput" onclick="showHidePasswordConfirm()">visibility_off</i>
                                </div>
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>
                        </div>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">В мене вже є акаунт</a>
                        <div class="text-center">
                            <input type="submit" value="Реєстрація" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function showHidePassword() {
            var password = document.getElementById("password");
            var eyeIcon = password.nextElementSibling;
            if (password.type === "password") {
                password.type = "text";
                eyeIcon.textContent = "visibility";
            } else {
                password.type = "password";
                eyeIcon.textContent = "visibility_off";
            }
        }

        function showHidePasswordConfirm() {
            var passwordConfirm = document.getElementById("passwordConfirm");
            var eyeIcon = passwordConfirm.nextElementSibling;
            if (passwordConfirm.type === "password") {
                passwordConfirm.type = "text";
                eyeIcon.textContent = "visibility";
            } else {
                passwordConfirm.type = "password";
                eyeIcon.textContent = "visibility_off";
            }
        }
    </script>
}






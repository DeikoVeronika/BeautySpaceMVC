@{
    ViewData["Title"] = "Query5";
}

<div class="content">
    <div class="text-center">
        <h2>Запити</h2>
    </div>

    <div id="employeesByServiceCount">
        <h3>Запит 5:</h3>
        <h4>Знайти всіх працівників, які надають задану кількість послуг</h4>
        <form asp-controller="Queries" asp-action="Query5" method="post">
            <div class="form-group">
                <label for="serviceCount">Кількість послуг</label>
                <input type="number" class="form-control" id="serviceCount" placeholder="Введіть кількість послуг" name="serviceCount" required>
                <span id="errorSpan" style="color: red;"></span>
            </div>
            <div style="display: flex; margin-top: 15px; gap: 15px;">
                <button type="submit" class="btn btn-primary">Надіслати запит</button>
                <a class="btn-back-new" asp-action="Index">Повернутися до запитів</a>
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>Ім'я</th>
                    <th>Прізвище</th>
                    <th>Номер телефону</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p>@ViewBag.Message</p>
        }

    </div>

</div>

<script>
    document.getElementById('serviceCount').addEventListener('input', function (event) {
        let inputValue = event.target.value;
        let errorSpan = document.getElementById('errorSpan');

        if (/^\d+$/.test(inputValue) && parseInt(inputValue) > 0) {
            errorSpan.textContent = '';
        } else {
            event.target.value = '';
            errorSpan.textContent = 'Будь ласка, введіть додатнє число.';
        }
    });
</script>

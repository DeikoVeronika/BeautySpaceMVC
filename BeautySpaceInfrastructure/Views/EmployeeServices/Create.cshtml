@model BeautySpaceDomain.Model.EmployeeService

@{
    ViewData["Title"] = "Додавання працівника";
}

<div class="content">

    <h4>Додавання працівника до послуги "@ViewBag.ServiceName"</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none;">
                    <label asp-for="ServiceId" class="control-label"></label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                </div>
                <div class="edit-create-or-back">
                    <input type="submit" value="Додати працівника" class="btn btn-primary" />
                    <a class="btn-back-new" asp-action="Index">Скасувати</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{
        var message = TempData["Message"] as string;
    }

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-warning text-center container">
            @message
        </div>
    }

    <script>
        var dropdown = document.getElementById("EmployeeId");

        var messageElement = document.querySelector(".alert.alert-warning");

        dropdown.addEventListener("change", function () {
            messageElement.style.display = "none";
        });


    </script>
}


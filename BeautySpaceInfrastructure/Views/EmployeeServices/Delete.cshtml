@model BeautySpaceDomain.Model.EmployeeService

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EmployeeService</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
    </dl>
    
    <form id="deleteForm" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index">Назад</a>
    </form>
    <button class="btn btn-danger" onclick="confirmDelete() ">Видалити</button>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            $.ajax({
                url: '/TimeSlots/GetTimeSlotCount', // Змініть URL на відповідний
                type: 'GET',
                data: { employeeServiceId: @Model.Id }, // Змініть параметр на відповідний
                success: function (timeSlotCount) {
                    if (timeSlotCount > 0) {
                        Swal.fire({
                            title: 'Ви впевнені?',
                            text: "Якщо ви видалите працівника цієї послуги, всі його таймслоти та бронювання будуть втрачені.",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#ab0c24',
                            cancelButtonColor: '#6d6d6d',
                            confirmButtonText: 'Видалити EmployeeService',
                            cancelButtonText: 'Cкасувати видалення'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                document.getElementById('deleteForm').submit();
                            }
                        })
                    } else {
                        document.getElementById('deleteForm').submit();
                    }
                }
            });
        }

    </script>
}

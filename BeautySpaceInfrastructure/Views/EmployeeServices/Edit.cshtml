@model BeautySpaceDomain.Model.EmployeeService

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <h1>Edit</h1>

    <h4>EmployeeService</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ServiceId" class="control-label"></label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="edit-create-or-back">
                    <input type="submit" value="Зберегти зміни" class="btn btn-outline-primary" />
                    <a class="btn-back-new" asp-action="Index">Скасувати зміни</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

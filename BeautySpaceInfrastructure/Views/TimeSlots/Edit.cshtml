@model BeautySpaceDomain.Model.TimeSlot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TimeSlot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="selectedServiceId" name="serviceId" value="@Model.EmployeeService.ServiceId" />
            <input type="hidden" id="selectedEmployeeId" name="employeeId" value="@Model.EmployeeService.EmployeeId" />



            <div class="form-group">
                <label asp-for="EmployeeService.ServiceId" class="control-label">Service</label>
                <select asp-for="EmployeeService.ServiceId" class="form-control" asp-items="ViewBag.ServiceIdList">
                    <option value="" disabled selected>Оберіть послугу</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeService.EmployeeId" class="control-label">Employee</label>
                <select asp-for="EmployeeService.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeIdList"></select>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" placeholder="dd.mm.yyyy" min="2023-01-01" id="dateInput" />
                <span id="dateError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBooked" /> @Html.DisplayNameFor(model => model.IsBooked)
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Зберегти змінити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Скасувати</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/timeSlotDateError.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Ініціалізувати selectedServiceId та selectedEmployeeId
            var selectedServiceId = $('#EmployeeService_ServiceId').val();
            var selectedEmployeeId = $('#EmployeeService_EmployeeId').val();

            // Встановити початкові значення
            $('#selectedServiceId').val(selectedServiceId);
            $('#selectedEmployeeId').val(selectedEmployeeId);

            // При зміні ServiceId
            $('#EmployeeService_ServiceId').change(function () {
                var selectedServiceId = $(this).val();
                $('#selectedServiceId').val(selectedServiceId); // Встановлення ServiceId
                if (selectedServiceId) {
                    $.getJSON('/TimeSlots/GetEmployeesByService', { serviceId: selectedServiceId }, function (employees) {
                        var employeeSelect = $('#EmployeeService_EmployeeId');
                        employeeSelect.empty();
                        $.each(employees, function (index, employee) {
                            employeeSelect.append($('<option/>', {
                                value: employee.value,
                                text: employee.text
                            }));
                        });
                    });
                }
            });

            // При зміні EmployeeId
            $('#EmployeeService_EmployeeId').change(function () {
                var selectedEmployeeId = $(this).val();
                $('#selectedEmployeeId').val(selectedEmployeeId); // Встановлення EmployeeId
            });
        });

    </script>

}
